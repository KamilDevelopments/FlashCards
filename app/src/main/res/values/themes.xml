<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
    </style>
    <style name="CardViewStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Custom TextView Style -->
    <style name="TextViewStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="EditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Custom Button Style -->
    <style name="ButtonStyle">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="elevation">4dp</item>
        <item name="android:buttonCornerRadius">8dp</item>
    </style>
    <style name="IconButtonStyle" parent="Widget.AppCompat.ImageButton">

        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:background">@drawable/icon_button_ripple</item>
        <item name="android:padding">12dp</item>
        <item name="android:tint">@color/black</item>
    </style>
</resources>